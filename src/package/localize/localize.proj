<Project Sdk="Microsoft.Build.NoTargets">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
  </PropertyGroup>

  <Target Name="Localize">
    <ItemGroup>
      <ProductSource Include="$(RepositorySrcDir)**\*.csproj" Exclude="$(RepositorySrcDir)package\**\*.csproj" />
    </ItemGroup>

    <MSBuild Projects="@(ProductSource)"
             Targets="Localize"
             BuildInParallel="True" />
  </Target>
</Project>
