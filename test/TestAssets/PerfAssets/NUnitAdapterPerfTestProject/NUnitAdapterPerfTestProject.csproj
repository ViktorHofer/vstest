<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.1;net451</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="$(NETTestSdkVersion)" />
    <PackageReference Include="NUnit" Version="$(NUnit3FrameworkVersion)" />
    <PackageReference Include="NUnit3TestAdapter" Version="$(NUnit3AdapterVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NunitTests.tt"
          Generator="TextTemplatingFileGenerator"
          LastGenOutput="NunitTests.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="NunitTests.cs"
             DesignTime="True"
             AutoGen="True"
             DependentUpon="NunitTests.tt" />
  </ItemGroup>
</Project>
